
@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section tags {
    <link rel="canonical" href="https://www.kaktusyazilim.com/referanslar" type="text/html" />

    <meta name="description" content="@Model.CurrentSettings.MetaDescription" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Kaktüs Yazılım">
    <meta property="og:title" content="@Model.CurrentSettings.MetaDescription">
    <meta property="og:description" content="@Model.CurrentSettings.MetaDescription">
    <meta property="og:url" content="https://www.kaktusyazilim.com/referanslar">
    <meta property="og:locale" content="tr_TR">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@@kaktusyazilimcom">
    <meta name="twitter:title" content="Kaktüs Yazılım">
    <meta name="twitter:url" content="https://www.kaktusyazilim.com/referanslar">
