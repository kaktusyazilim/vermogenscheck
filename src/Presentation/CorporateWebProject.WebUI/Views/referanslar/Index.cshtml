</div>

<div class="container" style="margin-top:50px">
    <div class="row">
        <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h1 class="gallery-title">Portfolyo</h1>
        </div>

        <div align="center">
            <button class="btn btn-default filter-button" data-filter="all">Tümü (@Model.PortfolioCategoryMapList.Select(x=>x.PortfolioFriendlyUrl).GroupBy(x=>x).ToList().Count())</button>

            @foreach (var item in Model.CategoryList.Where(x => x.TypeId == 17).ToList())
            {
                var categoryList = Model.PortfolioCategoryMapList.Where(x => x.CategoryId == item.Id).ToList();

                <button class="btn btn-default filter-button" data-filter="@item.FriendlyUrl">@item.Name (@categoryList.Count())</button>

            }

        </div>
        <br />



        @{ int index = 0;}
        @foreach (var item in Model.PortfolioList.OrderBy(x=>x.Queue).ToList())
        {
            var categoryList = Model.PortfolioCategoryMapList.Where(x => x.PortfolioFriendlyUrl == item.FriendlyUrl).Select(x => x.CategoryName).ToList();
            string categoryString = "";
            string categoryNameString = "";
            categoryList.ForEach(x => categoryString += FriendlyUrl.FriendlyURLTitle(x) + " ");
            Model.PortfolioCategoryMapList.Where(x => x.PortfolioFriendlyUrl == item.FriendlyUrl).Select(x => x.CategoryName).ToList().ForEach(x => categoryNameString += x + " / ");

           
            @*<div class="col-lg-4 col-md-6 col-sm-10 mt-2" >
                <div style="border:1px solid #b5b5b5" class="portfolio-item3 @(index%2==0?"":"") wow fadeInUp" data-wow-duration="1.5s" data-wow-delay=".2s">
                    <img style=" height:350px;width:100%;object-fit:scale-down" src="@item.Mockup" alt="image">
                    <div class="overlay">
                        <div class="overlay-content">
                            <p>@categoryNameString</p>
                            <h4><a href="project-details.html">@item.Title</a></h4>
                            <a href="project-details.html"><i class="bi bi-arrow-up-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>*@
            index = index + 1;

            <div class="gallery_product col-lg-4 col-md-4 col-sm-12 col-xs-12 filter hdpe @categoryString">
                <div class="portfolio-item1 style-3  " data-wow-duration="1.5s" data-wow-delay="0.2s" style="visibility: visible; animation-duration: 1.5s; animation-delay: 0.2s; animation-name: fadeInDown;">
                    <div style="cursor: pointer; -webkit-box-shadow: 0px -17px 35px -20px rgba(125,119,125,1); -moz-box-shadow: 0px -17px 35px -20px rgba(125,119,125,1); box-shadow: 0px -17px 35px -20px rgba(125,119,125,1); " onclick="window.location.href='/referanslar/@item.FriendlyUrl'" class="portfolio-img">
                        <img alt="@item.Title" style=" height:280px;width:100%;object-fit:scale-down" src="@item.Mockup">

                    </div>
                    <div class="portfolio-content">
                        <span title="@categoryNameString" style="min-height:50px;">Hizmet : @(categoryNameString!=""?categoryNameString.Length>72? categoryNameString.Substring(0, 72)+" ...": categoryNameString.Substring(0, categoryNameString.Length-2) : "") </span>
                        <h4 style="font-size:20px !important;font-weight:500; min-height: 80px; font-family: poppins,sans-serif"><a href="/referanslar/@item.FriendlyUrl">@item.Title</a></h4>
                        <hr />
                        <div style="display:flex;justify-content:@(item.Website != null && item.Website != ""?"space-between":"center")">
                            <a href="/referanslar/@item.FriendlyUrl" class="text-btn">
                                Detaylar<svg width="18" height="10" viewBox="0 0 18 10" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M11.1818 1.38021V5V8.61979C11.1818 8.78083 11.3624 8.87583 11.4951 8.7846L17 5L11.4951 1.2154C11.3624 1.12417 11.1818 1.21917 11.1818 1.38021Z"></path>
