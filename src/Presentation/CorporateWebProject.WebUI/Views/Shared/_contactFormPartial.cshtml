<form class="form Contactform" method="post">
    @Html.AntiForgeryToken()
    <input type="text" id="LangId" name="LangId" placeholder="LangId" required style="display: none;" value="@Model.CurrentLanguage.Id">
    @if (Model.Exchanges != null)
    {
        <input type="text" id="ExchangeGuid" name="ExchangeGuid" placeholder="ExchangeGuid" required style="display: none;" value="@Model.Exchanges.ItemGuid">
    }
    <div class="form-group w-100">
        <h2>
            Kontaktieren Sie <span>Uns</span>
        </h2>
        <p>
            Möchten Sie persönliche Beratung oder ein Konto eröffnen? Füllen Sie das Formular aus, wir werden uns innerhalb von 24 Stunden persönlich bei Ihnen melden.
        </p>
    </div>
    <div class="form-group">
        <input type="text" id="name" name="Name" placeholder="Name" required>
    </div>
    <div class="form-group">
        <input type="text" id="surname" name="Surname" placeholder="Nachname" required>
    </div>
    <div class="form-group">
        <input type="email" id="email" name="Mail" placeholder="E-Mail" required>
    </div>
    <div class="form-group">
        <input type="phone" id="phone" name="Phone" placeholder="Telefon Nummer" required>
    </div>
    <div class="form-group w-100">
        <input type="text" id="count" name="Count" placeholder="Gewünschter Investitionsbetrag" required>
    </div>
    <div class="form-group w-100">
        <textarea name="message" id="message" placeholder="Nachricht" required></textarea>
    </div>
    <div class="form-group w-100">
        <select name="Category" id="select" required>
            <option value="">Grund für die Anfrage</option>

            @foreach (var item in Model.ContactCategoriesList)
            {
                <option value="@item.ItemGuid">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group w-100 form-group-last">
        <div class="checkbox">
            <input type="checkbox" id="checkbox" name="checkbox" required>
            <label for="checkbox">Ich habe die Datenschutzerklärung gelesen und akzeptiere sie.</label>
        </div>
        <button type="submit" class="btn">Senden</button>
    </div>
</form>