@model CorporateWebProject.WebUI.Models.ServiceVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@(Model.Modul!=null?Model.Modul.Title:"")</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@(Model.Modul!=null?"/manager"+Model.Modul.Url:"")@(Model.Page!=null?Model.Page.Url:"/index")">
                            <svg class="stroke-icon">
                                <use href="/manager/assets/svg/icon-sprite.svg#stroke-home"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">@(Model.Modul!=null?Model.Modul.Title:"")</li>
                    <li class="breadcrumb-item active">@(Model.Page!=null?Model.Page.Title:Model.Modul.Title+" Ekle")</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row starter-main">
        <div class="col-sm-12">
            <div class="card">

                <div class="card-body">
                    <form class="row g-3 needs-validation custom-input" enctype="multipart/form-data" action="/manager/@Model.Modul!.Url/create" method="post" novalidate="">
                        <div class="mb-3">
                            <div class="col-form-label">
                                Kategori:
                                @Html.DropDownListFor(x => x.Gallery.CategoryId, new SelectList(Model.CategoryList, "Id", "Name"), "Lütfen kategori seçiniz", new { @class = "form-control  input-validate", placeholder = "Lütfen kategori seçiniz." })

                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Gallery.Queue">Galeri görüntülenme sırasını giriniz ( Zorunlu değil )</label>
                            <input class="form-control input-validate" asp-for="Gallery.Queue" data-error="Lütfen Galeri görüntülenme sırasını giriniz" placeholder="Galeri görüntülenme sırasını giriniz" , required="" type="number">
                        </div>


                        <div class="col-12">
                            <label class="form-label" asp-for="Gallery.Name">Galeri için bir isim giriniz ( Zorunlu değil )</label>
                            <input class="form-control input-validate" asp-for="Gallery.Name" data-error="Lütfen Galeri için bir isim giriniz" placeholder="Galeri için bir isim giriniz">
                        </div>

                        <div class="col-12">
                            <label class="form-label">Fotoğraf</label>
                            <input type="file" name="files" class="form-control input-validate">

                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="Gallery.LangId">Gallery Dili</label>
                            @Html.DropDownListFor(x => x.Gallery.LangId, new SelectList(Model.LanguageList, "Id", "Name"), "Lütfen bir dil seçiniz", new { @class = "form-control input-validate", data_error = "Lütfen kategori için bir dil seçiniz", required = "" })

                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Container-fluid Ends-->


