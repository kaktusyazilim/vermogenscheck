@model CorporateWebProject.WebUI.Models.ServiceVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@(Model.Modul!=null?Model.Modul.Title:"")</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@(Model.Modul!=null?"/manager"+Model.Modul.Url:"")@(Model.Page!=null?Model.Page.Url:"/index")">
                            <svg class="stroke-icon">
                                <use href="/manager/assets/svg/icon-sprite.svg#stroke-home"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">@(Model.Modul!=null?Model.Modul.Title:"")</li>
                    <li class="breadcrumb-item active">@(Model.Page!=null?Model.Page.Title:Model.Modul.Title+" Ekle")</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row starter-main">
        <div class="col-sm-12">
            <div class="card">

                <div class="card-body">
                    <form class="row g-3 needs-validation custom-input" enctype="multipart/form-data" action="/manager/@Model.Modul!.Url/create" method="post" novalidate="">

                        <div class="col-lg-6 col-sm-12">
                            <label class="form-label" asp-for="Comment.CountryGuid">Ülke</label>
                            <select id="lowestCategory" class="form-control input-validate lowestCategory" data-error="Lütfen server bilginizi giriniz" asp-for="Comment.CountryGuid" type="text" placeholder="Server bilginizi giriniz." required="">
                                <option selected disabled value="0">Lütfen bir kategori seçiniz</option>
                                @foreach (var item in Model.SubCategoryList.Where(x => x.CategoryId == 92).ToList())
                                {
                                    <option value="@item.ItemGuid">@item.SubCategoryName</option>
                                }
                            </select>
                        </div>

                        <div class="col-lg-6 col-sm-12">
                            <label class="form-label" asp-for="Comment.CityGuid">Şehir</label>
                            <select id="lowestcategory" class="form-control input-validate" data-error="Lütfen server bilginizi giriniz" asp-for="Comment.CityGuid" type="text" placeholder="Server bilginizi giriniz." required="">
                                <option selected disabled value="0">Lütfen önce bir ülke seçiniz</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="Comment.Queue">Sıra</label>
                            <input class="form-control input-validate" data-error="Lütfen yorum sırasını giriniz" asp-for="Comment.Queue" type="text" placeholder="Yorum sırası" required="">
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Comment.Title">İsim Soyisim</label>
                            <input class="form-control input-validate" data-error="Lütfen isim soyisim bilgisini giriniz" asp-for="Comment.Title" type="text" placeholder="İsim soyisim" required="">
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Comment.Comment">Yorum</label>
                            <textarea class="form-control input-validate" data-error="Lütfen Mail şifre bilginizi giriniz" asp-for="Comment.Comment" type="text" placeholder="Mail şifre bilginizi giriniz." required=""></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Comment.SubComment">Alt Yorum</label>
                            <textarea class="form-control input-validate" data-error="Lütfen Mail başlığı bilginizi giriniz" asp-for="Comment.SubComment" type="text" placeholder="Mail başlığı bilginizi giriniz." required=""></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Fotoğraf ( Boş geçerseniz varsayılan fotoğraf atanır.)</label>
                            <input class="form-control " name="pictures" type="file">
                        </div>


                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Container-fluid Ends-->
