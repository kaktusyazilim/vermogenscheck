@model CorporateWebProject.WebUI.Models.ServiceVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@(Model.Modul!=null?Model.Modul.Title:"")</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@(Model.Modul!=null?"/manager/"+Model.Modul.Url:"")@(Model.Page!=null?Model.Page.Url:"/index")">
                            <svg class="stroke-icon">
                                <use href="/manager/assets/svg/icon-sprite.svg#stroke-home"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">@(Model.Modul!=null?Model.Modul.Title:"")</li>
                    <li class="breadcrumb-item active">@(Model.Page!=null?Model.Page.Title:"Liste")</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row starter-main">
        <div class="col-sm-12">
            <div class="card">

                <div class="card-body">
                    <form class="row g-3 needs-validation custom-input" action="/manager/@Model.Modul.Url/update" method="post" novalidate="">
                        @Html.HiddenFor(x => x.Page.ItemGuid)
                        <div class="col-12">
                            <label class="form-label" asp-for="Page.Queue">Sayfa Sırası</label>
                            <input class="form-control input-validate" asp-for="Page.Queue" data-error="Lütfen modül sırası giriniz." type="text" placeholder="Sayfanızın görüntülenme sırasını giriniz" required="">

                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Page.PageGuid">Sayfa Guid</label>
                            <input class="form-control input-validate" asp-for="Page.PageGuid" data-error="Lütfen sayfa guidini giriniz." type="text" placeholder="Bir Sayfa Guid giriniz" required="">

                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Page.Title">Sayfa Adı</label>
                            <input class="form-control input-validate" asp-for="Page.Title" data-error="Lütfen modül adını giriniz." type="text" placeholder="Bir Sayfa adı giriniz" required="">

                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Page.ModulId">Modül Tipi</label>
                            @Html.DropDownListFor(x => x.Page.ModulId, new SelectList(Model.ModulList, "Id", "Title"), "Lütfen bir modül seçiniz", new { @class = "form-control input-validate", data_error = "Lütfen modül adını giriniz.", required = "" })
                        </div>
                        <div class="col-12">
                            <label class="form-label" for="validationCustom01" asp-for="Page.Url">Sayfa Url</label>
                            <input class="form-control input-validate" data-error="Lütfen Sayfa urlsini giriniz." asp-for="Page.Url" type="text" placeholder="Sayfanızın urlsini giriniz" required="">

                        </div>
                        <div class="col-12">
                            <label class="form-label" for="validationCustom01" asp-for="Page.LangId">Sayfa Dili</label>
                            @Html.DropDownListFor(x => x.Page.LangId, new SelectList(Model.LanguageList, "Id", "Name"), "Lütfen bir dil seçiniz", new { @class = "form-control input-validate", type = "text", data_error = "Lütfen modül dilini giriniz.", placeholder = "Modülünüz urlsini giriniz", required = "" })

                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Page.IsShow">Sayfa Sayfası Gösterilsin Mi?</label>
                            <select class="form-control">
                                <option value="">Bir seçenek seçiniz</option>
                                <option value="true">Gösterilsin</option>
                                <option value="false">Gösterilmesin</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Container-fluid Ends-->