@model CorporateWebProject.WebUI.Models.ServiceVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
@section css {
    <style>
        .cke_notifications_area {
            display: none !important;
        }
    </style>
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@(Model.Modul!=null?Model.Modul.Title:"")</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@(Model.Modul!=null?"/manager"+Model.Modul.Url:"")@(Model.Page!=null?Model.Page.Url:"/index")">
                            <svg class="stroke-icon">
                                <use href="/manager/assets/svg/icon-sprite.svg#stroke-home"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">@(Model.Modul!=null?Model.Modul.Title:"")</li>
                    <li class="breadcrumb-item active">@(Model.Page!=null?Model.Page.Title:Model.Modul.Title+" Ekle")</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row starter-main">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form class="row g-3 needs-validation custom-input" enctype="multipart/form-data" action="/manager/@Model.Modul.Url/create" method="post">

                        <div class="col-12">
                            <label class="form-label" asp-for="Contents.ContentKey">Anahtar Kelime</label>
                            <input class="form-control input-validate" data-error="Lütfen bir başlık giriniz" placeholder="Başlık giriniz." asp-for="Contents.ContentKey" required type="text" />
                            <span asp-validation-for="Contents.ContentKey"></span>

                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="Contents.Text">1.Başlık</label>
                            <textarea rows="4" class="form-control input-validate" asp-for="Contents.Text" id="ck1" data-error="Lütfen açıklama giriniz." type="text" placeholder="Hakkımızda kısmı için açıklama giriniz." required=""></textarea>
                            <span asp-validation-for="Contents.Text"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="Contents.LongText">1. Açıklama</label>
                            <textarea rows="4" class="form-control input-validate" asp-for="Contents.LongText" data-error="Lütfen açıklama giriniz." type="text" placeholder="Hakkımızda kısmı için açıklama giriniz." required=""></textarea>
                            <span asp-validation-for="Contents.LongText"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="Contents.Link">2. Başlık</label>
                            <textarea rows="4" class="form-control input-validate" asp-for="Contents.Link" id="ck2" data-error="Lütfen açıklama giriniz." type="text" placeholder="Hakkımızda kısmı için açıklama giriniz." required=""></textarea>
                            <span asp-validation-for="Contents.Link"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="Contents.Icon">2. Açıklama</label>
                            <textarea rows="4" class="form-control input-validate" asp-for="Contents.Icon" data-error="Lütfen açıklama giriniz." type="text" placeholder="Hakkımızda kısmı için açıklama giriniz." required=""></textarea>
                            <span asp-validation-for="Contents.Icon"></span>
                        </div>


                        <div class="col-12">
                            <label class="form-label" asp-for="Contents.LangId">Dili</label>
                            @Html.DropDownListFor(x => x.Contents.LangId, new SelectList(Model.LanguageList, "Id", "Name"), "Lütfen bir dil seçiniz", new { @class = "form-control input-validate", data_error = "Lütfen kategori için bir dil seçiniz", required = "" })
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>

                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Container-fluid Ends-->


@section js{
    <script src="https://cdn.ckeditor.com/4.16.0/full-all/ckeditor.js"></script>

    <script>
        <!-- Toolbarda sadece kalınlaştırma
            CKEDITOR.replace('ck1', {
                toolbar: 'Full',
                toolbar_Full:
                    [
                        { name: 'basicstyles', items: ['Bold', 'RemoveFormat'] },
                    ],
                extraPlugins: 'iframe',
                enterMode: CKEDITOR.ENTER_BR,
                shiftEnterMode: CKEDITOR.ENTER_P,
                filebrowserBrowseUrl: '/manager/files/Browse',
                filebrowserUploadUrl: '/manager/files/create',
                contentsCss: 'body { font-size: 4rem; color: #343a40; font-weight: 700; font-family: "Poppins", sans-serif; } strong {font-size: 6rem; color: #1345CC; }'
            });

            CKEDITOR.replace('ck2', {
                toolbar: 'Full',
                toolbar_Full:
                    [
                        { name: 'basicstyles', items: ['Bold', 'RemoveFormat'] },
                    ],
                extraPlugins: 'iframe',
                enterMode: CKEDITOR.ENTER_BR,
                shiftEnterMode: CKEDITOR.ENTER_P,
                filebrowserBrowseUrl: '/manager/files/Browse',
                filebrowserUploadUrl: '/manager/files/create',
                contentsCss: 'body { font-size: 4rem; color: #343a40; font-weight: 700; font-family: "Poppins", sans-serif; } strong {font-size: 6rem; color: #1345CC; }'
            });


    </script>
}
