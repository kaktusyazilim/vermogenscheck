
@{
    ViewData["Title"] = "advanceRequest";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Avans Talep Et</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/manager/accounting/advanceRequest">
                            <svg class="stroke-icon">
                                <use href="/manager/assets/svg/icon-sprite.svg#stroke-home"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Muhasebe</li>
                    <li class="breadcrumb-item active">Avans Talep Et</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row starter-main">
        <div class="card">
            <div class="card-body">
                <div class="col-lg-12 col-sm-12">
                    <div class="form-group">
                        <label><i class="fa fa-money"></i> Avans Talep</label>
                    </div>
                </div>
                <hr />
                <div class="col-lg-12 col-sm-12">
                    <div class="form-group">
                        <label>Miktar</label>
                        <input class="form-control custom-text-white" placeholder="Talep ettiğiniz miktarı giriniz" data-type="currency" />
                    </div>
                </div>
                <div class="col-lg-12 col-sm-12">
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control  custom-text-white" placeholder="Avans için bir açıklama giriniz" rows="5"></textarea>
                    </div>
                </div>
                <div class="col-lg-12 col-sm-12 mt-3">
                    <div class="form-group">
                        <button class="btn btn-light w-100" type="button">Gönder</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>