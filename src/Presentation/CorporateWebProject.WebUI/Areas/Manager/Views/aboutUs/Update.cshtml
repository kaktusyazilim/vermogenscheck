@model CorporateWebProject.WebUI.Models.ServiceVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@(Model.Modul!=null?Model.Modul.Title:"")</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@(Model.Modul!=null?"/manager"+Model.Modul.Url:"")@(Model.Page!=null?Model.Page.Url:"/index")">
                            <svg class="stroke-icon">
                                <use href="/manager/assets/svg/icon-sprite.svg#stroke-home"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">@(Model.Modul!=null?Model.Modul.Title:"")</li>
                    <li class="breadcrumb-item active">@(Model.Page!=null?Model.Page.Title:Model.Modul.Title+" Ekle")</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row starter-main">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form class="row g-3 needs-validation custom-input" enctype="multipart/form-data" action="/manager/@Model.Modul.Url/create" method="post">

                        <div class="col-12">
                            <label class="form-label" for="pictures">Fotoğraf</label>
                            <input class="form-control input-validate" data-error="Lütfen bir fotoğraf seçiniz" name="pictures" required type="file" />
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="AboutUs.Description">Hakkımızda Açıklaması</label>
                            <textarea rows="4" class="form-control input-validate" asp-for="AboutUs.Description" data-error="Lütfen açıklama giriniz." type="text" placeholder="Hakkımızda kısmı için açıklama giriniz." required=""></textarea>
                            <span asp-validation-for="AboutUs.Description"></span>
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="AboutUs.Button1Text">Buton Adı</label>
                            <input class="form-control input-validate" data-error="Lütfen buton için bir isim giriniz" placeholder="Buton adını giriniz." asp-for="AboutUs.Button1Text" required type="text" />
                            <span asp-validation-for="AboutUs.Button1Text"></span>

                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="AboutUs.Button1Url">Buton Linki</label>
                            <input class="form-control input-validate" data-error="Lütfen buton için yönlenecek url giriniz" placeholder="Butona basılınca yönlenecek url'yi giriniz" asp-for="AboutUs.Button1Url" required type="text" />
                            <span asp-validation-for="AboutUs.Button1Url"></span>
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="AboutUs.Button1Color">Buton Rengi</label>
                            <input class="form-control " asp-for="AboutUs.Button1Color" type="color" />
                            <span asp-validation-for="AboutUs.Button1Color"></span>

                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Container-fluid Ends-->