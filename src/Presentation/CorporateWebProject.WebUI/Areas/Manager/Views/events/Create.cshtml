@model CorporateWebProject.WebUI.Models.ServiceVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@(Model.Modul!=null?Model.Modul.Title:"")</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@(Model.Modul!=null?"/manager"+Model.Modul.Url:"")@(Model.Page!=null?Model.Page.Url:"/index")">
                            <svg class="stroke-icon">
                                <use href="/manager/assets/svg/icon-sprite.svg#stroke-home"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">@(Model.Modul!=null?Model.Modul.Title:"")</li>
                    <li class="breadcrumb-item active">@(Model.Page!=null?Model.Page.Title:Model.Modul.Title+" Ekle")</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row starter-main">
        <div class="col-sm-12">
            <div class="card">

                <div class="card-body">
                    <form class="row g-3 needs-validation custom-input" enctype="multipart/form-data" action="/manager/@Model.Modul!.Url/create" method="post" novalidate="">

                        <div class="col-12">
                            <label class="form-label" asp-for="Event.Title">Etkinlik Adı</label>
                            <input class="form-control input-validate" data-error="Lütfen etkinlik adını giriniz." asp-for="Event.Title" type="text" placeholder="Etkinlik adı." required="">
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Event.ShortDescription">Etkinlik Kısa Açıklama</label>
                            <textarea class="form-control input-validate" data-error="Lütfen etkinlik kısa açıklamasını giriniz." asp-for="Event.ShortDescription" type="text" placeholder="Etkinlik kısa açıklaması." required=""></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Event.FullDescription">Etkinlik Uzun Açıklama</label>
                            <textarea class="form-control input-validate editor" data-error="Lütfen etkinlik uzun açıklama giriniz." asp-for="Event.FullDescription" type="text" placeholder="Etkinlik uzun açıklama." required=""></textarea>
                        </div>


                        <div class="col-12">
                            <label class="form-label" asp-for="Event.Date">Etkinlik Tarihi</label>
                            <input class="form-control input-validate" data-error="Lütfen etkinlik tarihini giriniz." asp-for="Event.Date" type="date" placeholder="Etkinlik tarihi." required="">
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Event.Time">Etkinlik Süresi ( Ne kadar sürecek örn: 02-03 saat veya 14:00 - 16:00)</label>
                            <input class="form-control input-validate" data-error="Lütfen etkinlik süresini giriniz." asp-for="Event.Time" type="text" placeholder="Etkinlik süresi." required="">
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Event.Location">Etkinlik Lokasyonu</label>
                            <input class="form-control input-validate" data-error="Lütfen etkinlik lokasyonunu giriniz." asp-for="Event.Location" type="text" placeholder="Etkinlik lokasyonu." required="">
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Event.Organizer">Organizasyon Sahibi ( Örn: UpLife Academy)</label>
                            <input class="form-control input-validate" data-error="Lütfen etkinlik organizasyon sahibini giriniz." asp-for="Event.Organizer" type="text" placeholder="Etkinlik organizasyon sahibin." required="">
                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="Event.Phone">İletişim Numarası </label>
                            <input class="form-control input-validate" data-error="Lütfen iletişim numarasını giriniz" asp-for="Event.Phone" type="text" placeholder="İletişim numarası." required="">
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Event.Mail">Mail Adresi </label>
                            <input class="form-control input-validate" data-error="Lütfen mail adresini giriniz." asp-for="Event.Mail" type="text" placeholder="Mail Adresi" required="">
                        </div>
                        <div class="col-12">
                            <label class="form-label" asp-for="Event.Price">Etkinlik Ücreti (Bilgi vermek istemiyorsanız boş geçin)</label>
                            <input class="form-control " asp-for="Event.Price" type="text" placeholder="Etkinlik Ücreti" data-val="false">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Fotoğraf </label>
                            <input class="form-control " data-val="false" name="pictures" type="file" placeholder="Fotoğraf" required="">
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Container-fluid Ends-->
